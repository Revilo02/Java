package rekurzivfv;

public class recfv {
	static int fakt(int sz)
	{
		
		if (sz==1)
			return sz;
		if (sz>16)
			return 0;
		
		else 
			{
			return sz*fakt(sz-1);
			}
	}
	static int fib_szam(int n)
	{
		if (n<2)
			return n+fib_szam(n-1);
		else return n;
		
	}
	static public void main(String[] args)
	{
		System.out.println(fakt(17));
		System.out.print(fib_szam(3));

		System.out.print("vége");
		
	}
}
