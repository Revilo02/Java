		sportolo.add(z1);
		sportolo.add(y1);
		tanar.add(s2);
		tanar.add(s3);

		Scanner s = new Scanner(System.in);
		while (true) {
			String valasz;
			Menu.FoMenu();
			valasz = s.nextLine();
			if (valasz.equals("1")) {
				Menu.peopleadd();
				Parancsok.Peopleadd();
			} else if (valasz.equals("2")) {
				Menu.sportadd();
				Parancsok.Sportadd();
			} else if (valasz.equals("3")) {
			} else if (valasz.equals("4")) {
				Menu.Datasearch();
				Parancsok.Data();
			} else if (valasz.equals("5")) {
				Parancsok.Smodify();
			} else if (valasz.equals("6")) {
				Menu.Tmodify();
				Parancsok.Tmodify();
			} else if (valasz.equals("7")) {
			} else if (valasz.equals("8")) {
				break;
			}

		}

	}
}
